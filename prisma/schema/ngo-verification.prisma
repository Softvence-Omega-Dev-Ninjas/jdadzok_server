model NgoVerification {
  id String @id @default(uuid())
  
  // NGO being verified
  ngoId String
  ngo   Ngo    @relation(fields: [ngoId], references: [id], onDelete: Cascade)
  
  // Verification details
  verificationType IdentityVerificationType
  documentUrl      String // URL to verification documents
  status          VerificationStatus @default(PENDING) // PENDING, APPROVED, REJECTED
  
  // Admin who processed verification
  reviewedById String?
  reviewedBy   User?   @relation("VerificationReviewer", fields: [reviewedById], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("ngo_verifications")
  @@index([ngoId])
  @@index([status])
}