model Profile {
  id String @id @default(uuid())

  firstName   String
  lastName    String?
  profileUrl  String?
  gender      Gender
  jobTitle    JopTitle
  department  Department
  address     String
  city        String
  state       String
  dob         DateTime
  country     String?
  nationality String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Gender {
  MALE
  FEMALE
  OTHER
  PREFER_NOT_TO_SAY
}

enum JopTitle {
  BACK_END_DEVELOPER
  FRONT_END_DEVELOPER
  FULL_STACK_DEVELOPER
  MOBILE_DEVELOPER
  UI_DEVELOPER
  UX_DEVELOPER
  SEALS_ENGINEER
  DATA_SCIENTIST
  DATA_ANALYST
  DATA_ENGINEER
  HR_MANAGER
  FINANCE_MANAGER
  MARKETING_MANAGER
}

enum Department {
  IT
  DEVELOPMENT
  HR
  FINANCE
  MARKETING
  SEALS
}
