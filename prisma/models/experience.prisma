model Experience {
  id                 String    @id @default(uuid())
  designation        String
  companyName        String
  jobType            JobType
  startDate          DateTime
  endDate            DateTime?
  description        String
  isCurrentlyWorking Boolean
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
  TEMPORARY
  FREELANCE
}
