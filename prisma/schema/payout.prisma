model Payout {
  id        String        @id @default(uuid())
  userId    String
  amount    Float
  method    PaymentMethod
  status    PayOutStatus  @default(PENDING)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  user      User          @relation(fields: [userId], references: [id])

  @@map("payout")
}
