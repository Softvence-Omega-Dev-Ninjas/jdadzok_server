model Ngo {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  foundationDate DateTime
  ngoType        CommunityType

  // relations
  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String

  followers NGOFollower[]
  posts     Post[]

  @@map("ngo")
}
